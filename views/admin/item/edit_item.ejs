<div class="tab-pane fade show active " id="edit-item" role="tabpanel" aria-labelledby="profile-tab">


    <div class="card p-2 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT " method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" class="form-control" value="<%- item.title %>" id="title" name="title">
                </div>
                <div class="form-group">
                    <label for="">Price</label>
                    <input type="number" class="form-control" value="<%- item.price %>" name="price" id="price">
                </div>
                <div class="form-group">
                    <label for="">City</label>
                    <input type="text" class="form-control" value="<%- item.city %>" name="city" id="city">
                </div>
                <div class="form-group">
                    <label for="">Category</label>
                    <select name="categoryId" class="form-control" id="">
                        <option value="<%- item.categoryId.id %>"> == <%- item.categoryId.name %> == </option>
                        <% for(let i=0; i < category.length; i++){ %>
                        <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Image</label>
                    <input type="file" class="form-control" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea name="about" id="about" class="form-control"><%- item.description %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>


</div>