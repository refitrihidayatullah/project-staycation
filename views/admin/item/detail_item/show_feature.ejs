<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="home-tab">

    <div class="card shadow mb-4 mt-2">
        <!-- <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTable Item</h6>
        </div> -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter name " required>
                            </div>
                            <div class="form-group">
                                <label for="">QTY</label>
                                <input type="number" class="form-control" id="qty" name="qty" placeholder="Enter qty" required>
                            </div>
                            <div class="form-group">
                                <label for="image">Image</label>
                                <input type="file" class="form-control" id="image" name="image" required>
                            </div>
                            <input type="hidden" value="<%- itemId %>" name="itemId">
                        </div>
                        <a href="/admin/item" class="btn btn-secondary ml-3">Close</a>
                        <button type="submit" class="btn btn-primary">Save</button>

                    </form>
                </div>
                <div class="col-md-7 mt-3">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>QTY</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                            </thead>
                            <tbody>
                                <% for(let i =0; i < feature.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%= feature[i].name; %>
                                        </td>
                                        <td>
                                            <%= feature[i].qty; %>
                                        </td>
                                        <td>
                                            <img src="http://localhost:3000/<%= feature[i].imageUrl %>" alt="imageUrl" width="70px">
                                        </td>


                                        <td class="d-flex justify-content-around">
                                            <form action="/admin/item/<%- itemId %>/feature/<%- feature[i].id %>?_method=DELETE" method="POST">
                                                <a href="javascript:void()" type="button" class="btn btn-warning btn-sm btn-circle button-update" data-id="<%-feature[i].id %>" data-name="<%- feature[i].name %>" data-qty="<%- feature[i].qty %>"><i class="fa fa-edit"></i></a>
                                                <button type="submit" class="btn btn-danger btn-sm btn-circle"><i class="fa fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>