<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex flex-row bd-highlight justify-content-between">
            <h6 class="m-0 mt-2 font-weight-bold text-primary d-flex ">DataTable Bank</h6>
            <button type="button" class="btn btn-primary d-flex bd-highlight btn-circle btn-sm mt-2" data-toggle="modal" data-target="#addBank">
<i class="fas fa-plus"></i>         
</button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Bank Name</th>
                        <th>Rekening Number</th>
                        <th>Name</th>

                        <th>Action</th>
                </thead>
                <tbody>
                    <% for(let i =0; i < bank.length; i++) { %>
                        <tr>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                                <%= bank[i].nameBank; %>
                            </td>
                            <td>
                                <%= bank[i].nomorRekening; %>
                            </td>
                            <td>
                                <%= bank[i].name; %>
                            </td>



                            <td class="d-flex justify-content-around">
                                <a href="" type="button" class="btn btn-warning btn-sm btn-circle"><i class="fa fa-edit"></i></a>|
                                <button type="submit" class="btn btn-danger btn-sm btn-circle"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                        <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>